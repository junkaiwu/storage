content_list = get_write_list(json_dictionary, distance, duration)
if((len(json_dictionary) == len(distance)) and (len(json_dictionary) == len(duration))):
    write_content_list(content_list)
    set_width_col()
    paint_side(2, 1, 8, 6)
    print('work finished ^_^                               ', end='')
else:
    print("error 1")


